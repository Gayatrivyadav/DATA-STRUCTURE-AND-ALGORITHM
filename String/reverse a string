import java.util.*;
public class MyClass {
    public static void main(String args[]) {
   /*how to reverse a string using for loop*/
  String str = "I am a Powerful soul" , str1 = "";
  char ch;
  for(int i  =0;i<str.length(); i++){
      ch = str.charAt(i);
      str1 = ch  + str1;
  }
  System.out.println(str1);

/*How to reverse a string using a byteArray*/
String input  = "I am a coder";
//getBytes() method to convert string into bytes[]
byte[] bytearray = input.getBytes();
byte[] result = new byte[bytearray.length];
for(int i  =0;i<bytearray.length; i++)
result[i] = bytearray[bytearray.length- i - 1];
System.out.println(new String(result));
    }
}
